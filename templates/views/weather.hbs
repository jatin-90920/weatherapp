<!DOCTYPE html>
<html lang="en">

<head>
    {{>headlinks}}
</head>

<body>
    <!-- main navigation bar -->
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_weather my-5">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-10 col-12 mx-auto">
                        <form class="form-design">
                            <input type="text" id="city-name" placeholder="Enter the City" autocomplete="off">
                            <input type="submit" id="submitBtn" value="Search">
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-12 my-2">
                        <div class="container">
                            <div id="date"></div>
                            <div id="message">Get output Here</div>
                            <div id="weather"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer section -->
    {{>footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="main.js"></script>
</body>

</html>